
@{
    Layout = null;
    string result="";
    string hint="";
    if (@ViewBag.Result =="error")
    {
        result = "false";
        hint = "註冊失敗，請重新註冊";
    }
    else if (@ViewBag.Result == "success")
    {
        result = "true";
        hint = "您好，再一個步驟完成註冊程序：";
    }
    else if(@ViewBag.Result == "")
    {
        result = "error";
        hint = "註冊程序出現錯誤";
    }

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*<title>@ViewData["Title"] - Toeicking2021</title>*@
    <link rel="shortcut icon" href="~/favicon_1.ico" />
    <title>多益金後台管理系統</title>


    @*版型需要的檔案*@
    <link href="~/lib/plugins/switchery/switchery.min.css" rel="stylesheet" />
    <link href="~/lib/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/icons.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <script src="~/lib/assets/js/modernizr.min.js"></script>
    <link href="~/lib/assets/css/sweetalert2.css" rel="stylesheet" />
    @*頁面跳轉進度條*@
    <link href="~/css/nprogress.css" rel="stylesheet" />


</head>
<body>

    <div class="wrapper-page">

        @if (result == "true")
        {
            <div class="text-center">
                <a href="index.html" class="logo-lg"><i class=""></i> <span>多益金後台管理系統</span> </a>
            </div>

            <div class="card-box m-t-20">
                <div class="text-center">
                    <h5 class="text-uppercase font-bold m-b-0">@ViewBag.Name@hint</h5>
                </div>
                <div class="text-center">
                    <img src="~/images/mail_confirm.png" alt="img" class="thumb-lg m-t-20 center-block">
                    <p class="text-muted font-13 m-t-20">系統已收到您填寫的註冊相關資訊，並寄出驗證郵件到<b>@ViewBag.Email</b>，請前去收信完成註冊驗證程序。</p>
                </div>
            </div>

        }
        else
        {
            <div class="text-center">
                <a href="" class="logo-lg"><i class=""></i> <span>@hint</span> </a>
            </div>
            <form class="form-horizontal m-t-40" action="">
                <div class="form-group text-center m-t-20">
                    <div class="col-xs-12">
                        <button asp-action="Register" asp-controller="Member" class="btn btn-primary btn-block btn-custom w-md waves-effect waves-light">
                            重新註冊
                        </button>
                    </div>
                </div>
            </form>
        }

    </div>


    <script>
        var resizefunc = [];
    </script>

    <script src="~/lib/assets/js/jquery.min.js"></script>
    <script src="~/lib/assets/js/popper.min.js"></script>
    <script src="~/lib/assets/js/bootstrap.min.js"></script>
    <script src="~/lib/assets/js/detect.js"></script>
    <script src="~/lib/assets/js/fastclick.js"></script>
    <script src="~/lib/assets/js/jquery.slimscroll.js"></script>
    <script src="~/lib/assets/js/jquery.blockUI.js"></script>
    <script src="~/lib/assets/js/waves.js"></script>
    <script src="~/lib/assets/js/wow.min.js"></script>
    <script src="~/lib/assets/js/jquery.nicescroll.js"></script>
    <script src="~/lib/assets/js/jquery.scrollTo.min.js"></script>
    <link href="~/lib/plugins/switchery/switchery.min.css" rel="stylesheet" />
    <script src="~/lib/assets/js/jquery.core.js"></script>
    <script src="~/lib/assets/js/jquery.app.js"></script>
    @*使用jquery-ajax-unobtrusive*@
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
    @*使用sweetalert*@
    <script src="~/lib/assets/js/sweetalert2.js"></script>
    @*頁面跳轉進度條*@
    <script src="~/js/nprogress.js"></script>
    <script>
        // load事件之前發生的事件
        document.addEventListener('DOMContentLoaded', function () {
            // 進度條也是設到70%
            NProgress.set(0.7);
        });
        // load事件(頁面載入完成)，進度條結束
        window.addEventListener('load', function () {
            NProgress.done();
        });
    </script>

</body>
</html>
